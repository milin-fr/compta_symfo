{% extends 'base.html.twig' %}

{% block title %}Bill{% endblock %}

{% block body %}
    <h1>Bill</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bill.id }}</td>
            </tr>
            <tr>
                <th>BillNumber</th>
                <td>{{ bill.billNumber }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ bill.description }}</td>
            </tr>
            <tr>
                <th>PriceEuro</th>
                <td>{{ bill.priceEuro }}</td>
            </tr>
            <tr>
                <th>PriceCent</th>
                <td>{{ bill.priceCent }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ bill.startDate ? bill.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ bill.endDate ? bill.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ bill.createdAt ? bill.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ bill.updatedAt ? bill.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ bill.enabled ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('bill_index') }}">back to list</a>

    <a href="{{ path('bill_edit', {'id': bill.id}) }}">edit</a>

    {{ include('bill/_delete_form.html.twig') }}
{% endblock %}
