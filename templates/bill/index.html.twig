{% extends 'base.html.twig' %}

{% block title %}Bill index{% endblock %}

{% block body %}
    <h1>Bill index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>BillNumber</th>
                <th>Description</th>
                <th>PriceEuro</th>
                <th>PriceCent</th>
                <th>StartDate</th>
                <th>EndDate</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>Enabled</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bill in bills %}
            <tr>
                <td>{{ bill.id }}</td>
                <td>{{ bill.billNumber }}</td>
                <td>{{ bill.description }}</td>
                <td>{{ bill.priceEuro }}</td>
                <td>{{ bill.priceCent }}</td>
                <td>{{ bill.startDate ? bill.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ bill.endDate ? bill.endDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ bill.createdAt ? bill.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ bill.updatedAt ? bill.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ bill.enabled ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('bill_show', {'id': bill.id}) }}">show</a>
                    <a href="{{ path('bill_edit', {'id': bill.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('bill_new') }}">Create new</a>
{% endblock %}
