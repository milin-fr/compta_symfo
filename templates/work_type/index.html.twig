{% extends 'base.html.twig' %}

{% block title %}WorkType index{% endblock %}

{% block body %}
    <h1>WorkType index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>BudgetEuro</th>
                <th>BudgetCent</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>Enabled</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for work_type in work_types %}
            <tr>
                <td>{{ work_type.id }}</td>
                <td>{{ work_type.title }}</td>
                <td>{{ work_type.budgetEuro }}</td>
                <td>{{ work_type.budgetCent }}</td>
                <td>{{ work_type.createdAt ? work_type.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ work_type.updatedAt ? work_type.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ work_type.enabled ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('work_type_show', {'id': work_type.id}) }}">show</a>
                    <a href="{{ path('work_type_edit', {'id': work_type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('work_type_new') }}">Create new</a>
{% endblock %}
